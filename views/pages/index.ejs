<% layout("/layouts/boilerplate") %>

    <header class="hero bg-dark text-white text-center py-5" >
        <div class="container">
            <h1 class=" mb-4">Welcome to Smart Pantry</h1>
            <p class="lead mb-4">Effortlessly manage your pantry and reduce waste.</p>
            <a href="/signup" class="btn btn-warning btn-lg">Get Started</a>
        </div>
    </header>
    <section id="features" class="text-white bg-dark py-5">
        <div class="container text-center">
            <h2 class="display-4 mb-5">Why Choose Our Pantry Management?</h2>
            <div class="row">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="feature-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-solid fa-shelves"></i>
                        </div>
                        <h4>Inventory Tracking</h4>
                        <p>Keep track of your pantry items with ease.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="feature-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-solid fa-calendar-exclamation"></i>
                        </div>
                        <h4>Expiration Date Alerts</h4>
                        <p>Get notified before items expire.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="feature-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-regular fa-clipboard-list-check"></i>
                        </div>
                        <h4>Shopping List Integration</h4>
                        <p>Seamlessly add items to your shopping list.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="feature-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-solid fa-utensils"></i>
                        </div>
                        <h4>Recipe Suggestions</h4>
                        <p>Get recipes based on available ingredients.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="how-it-works" class="text-white bg-dark py-5">
        <div class="container text-center">
            <h2 class="display-4 mb-5">How It Works</h2>
            <div class="row">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="how-it-works-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-solid fa-barcode-scan"></i>
                        </div>
                        <h4>Scan & Add Items</h4>
                        <p>Quickly scan and add items to your pantry list.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="how-it-works-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-solid fa-calendar-days"></i>
                        </div>
                        <h4>Track Expiry Dates</h4>
                        <p>Stay on top of expiration dates to reduce waste.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="how-it-works-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-solid fa-bell"></i>
                        </div>
                        <h4>Get Notifications</h4>
                        <p>Receive alerts for expiring items and low stock.</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="how-it-works-box p-4 h-100">
                        <div class="icon mb-3">
                            <i class="fa-solid fa-dumpster"></i>
                        </div>
                        <h4>Enjoy Less Waste</h4>
                        <p>Optimize your pantry use and minimize food waste.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="pricing" class="bg-dark text-white py-5">
        <div class="container text-center">
            <h2 class="display-4 mb-5">Choose Your Plan</h2>
            <div class="row">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="pricing-box p-4">
                        <h3 class="mb-4">Free Plan</h3>
                        <p class="price mb-4">$0<span class="period">/month</span></p>
                        <ul class="list-unstyled mb-4">
                            <li>Basic Features</li>
                            <li>Single Device Sync</li>
                            <li>Email Support</li>
                        </ul>
                        <a href="/signup" class="btn btn-warning">Sign Up</a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="pricing-box p-4">
                        <h3 class="mb-4">Starter Plan</h3>
                        <p class="price mb-4">$10<span class="period">/month</span></p>
                        <ul class="list-unstyled mb-4">
                            <li>Shopping list generation</li>
                            <li>Basic recipe suggestions</li>
                            <li>Custom categories</li>
                        </ul>
                        <a href="/signup" class="btn btn-warning">Sign Up</a>
                    </div>
                </div>
                <!-- Add more pricing plans as needed -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="pricing-box p-4">
                        <h3 class="mb-4">Pro Plan</h3>
                        <p class="price mb-4">$15<span class="period">/month</span></p>
                        <ul class="list-unstyled mb-4">
                            <li>Unlimited item tracking</li>
                            <li>Advanced recipe suggestions</li>
                            <li>Monthly reports & trends</li>
                        </ul>
                        <a href="/signup" class="btn btn-warning">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <section id="cta" class="bg-dark text-white py-5 text-center">
        <div class="container">
            <h2 class="display-4 mb-4">Ready to Get Started?</h2>
            <p class="lead mb-4">Join us today and take control of your pantry like never before.</p>
            <a href="/signup" class="btn btn-warning btn-lg">Sign Up Now</a>
        </div>
    </section>
    
